                android:layout_gravity="center_horizontal">

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Female" />
            </RadioGroup>

            <!--address-->
            <LinearLayout
