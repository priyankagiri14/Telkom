                <RadioButton
                    android:id="@+id/rb_26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26-35" />

                <RadioButton
                    android:id="@+id/rb_36"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36-45" />
                <RadioButton
                    android:id="@+id/rb_45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45-65" />
