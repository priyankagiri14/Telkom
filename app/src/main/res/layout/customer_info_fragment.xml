            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvone"
                android:textColorHint="@color/colorPrimaryDark">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
