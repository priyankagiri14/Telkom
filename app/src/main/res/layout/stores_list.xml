<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/greenontrack"
        tools:ignore="MissingConstraints">
    </Toolbar>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:id="@+id/Storestext"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Stores List"
        android:gravity="center"
        android:textSize="@dimen/_20sdp" />

    <Spinner
        android:background="@color/greenontrack"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_below="@id/Storestext"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/spinner_stores"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="wrap_content">
    </Spinner>


    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner_stores"
        android:background="@drawable/buttonbg"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:text="Next"
        android:textColor="@color/greenontrack"
        android:id="@+id/next"
        android:textSize="@dimen/_15sdp"/>
</RelativeLayout>