<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="match_parent"
    android:background="@color/white">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/greenontrack"/>
    <ImageView
        android:layout_below="@id/toolbar"
        android:id="@+id/ontracklogo"
        android:layout_marginTop="?actionBarSize"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ontracklogo"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:foregroundGravity="right"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fname"
        android:layout_below="@id/ontracklogo"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryDark">

        <EditText
            android:layout_margin="10dp"
            android:backgroundTint="@color/greenontrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:id="@+id/firstname"
            android:textColor="#000"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lname"
        android:layout_margin="10dp"
        android:layout_below="@id/fname"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryDark">

        <EditText
            android:layout_margin="10dp"
            android:backgroundTint="@color/greenontrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:id="@+id/lastname"
            android:textColor="#000"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pswrd"
        android:layout_margin="10dp"
        android:layout_below="@id/lname"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryDark">

        <EditText
            android:layout_margin="10dp"
            android:backgroundTint="@color/greenontrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/password"
            android:textColor="#000"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pswrd"
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttonbg"
        android:text="LOGIN"
        android:textColor="@color/greenontrack"/>
</RelativeLayout>